import java.util.Scanner;

/**
 *
 * @author Asus
 */
public class Ejercicio_10 {
    public static void main(String[] args) {
        //Escribe un programa que, al recibir un número por consola, imprima una pirámide de números 
        //(por ejemplo, 1; 121; 12321; 1234321) utilizando bucles anidados para generar patrones simétricos y practicar la lógica de impresión de secuencias numéricas.
        
        int num;
        Scanner sc = new Scanner(System.in);
        
        System.out.print("Ingresa un número: ");
        num = sc.nextInt();

        for (int i = 1; i <= num; i++) {
            for (int e = 0; e < num - i; e++) {
                System.out.print(" ");
            }

            for (int j = 1; j <= i; j++) {
                System.out.print(j);
            }

            for (int j = i - 1; j >= 1; j--) {
                System.out.print(j);
            }

            System.out.println();
        }  
  
    }
    
}
