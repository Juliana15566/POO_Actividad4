import java.util.Scanner;

/**
 *
 * @author Asus
 */
public class Ejercicio_4 {
    public static void main(String[] args) {
        // Escribe un programa que, dado un número del 1 al 7, imprima en consola el nombre correspondiente del día de la semana, utilizando estructuras condicionales 
        //(if-else o switch) para validar la entrada y asociarla correctamente.
        
        int numDia;
        
        Scanner teclado = new Scanner(System.in);
        
        System.out.println("Escriba el numero del dia que se quiere saber (del 1  al 7)");
        numDia = teclado.nextInt();
        
        if(numDia>=1 && numDia<=7){
            if (numDia==1) System.out.println("Dia lunes");
            else if (numDia==2) System.out.println("Dia martes");
            else if (numDia==3) System.out.println("Dia miercoles");
            else if (numDia==4) System.out.println("Dia jueves");
            else if (numDia==5) System.out.println("Dia viernes");
            else if (numDia==6) System.out.println("Dia sabado");
            else System.out.println("Dia domingo");
        }
        else System.out.println("Numero ingresado no valido");
        
    }
}
