public class Ejercicio_11 {
    public static void main(String[] args) {
        //Crea un arreglo de 10 caracteres llamado caracteres y asigna a cada posición los valores especificados en una tabla 
        //(por ejemplo, posición 0 'h', posición 1 'z', etc.), para familiarizarte con la declaración, inicialización y manipulación de arreglos en Java.
        
        char[] cadena = new char[10];

        cadena[0] = 'J';
        cadena[1] = 'u';
        cadena[2] = 'l';
        cadena[3] = 'i';
        cadena[4] = 'a';
        cadena[5] = 'n';
        cadena[6] = 'a';
        cadena[7] = ' ';
        cadena[8] = 'V';
        cadena[9] = 'A';

        System.out.println("Contenido del arreglo de caracteres:");
        for (int i = 0; i < cadena.length; i++) {
            System.out.println("Posición " + i + ": " + cadena[i]);
        }
        
    }
}
