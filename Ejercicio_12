import java.util.Scanner;

/**
 *
 * @author Asus
 */
public class Ejercicio_12 {
    public static void main(String[] args) {
        //Desarrolla un programa que reciba 10 números por consola, los almacene en un arreglo y luego los muestre en orden inverso, 
        //enfatizando el manejo de índices y la lógica de recorrido inverso de estructuras lineales.
        
        Scanner teclado = new Scanner(System.in);
        int[] numeros = new int[10];

        for (int i = 0; i < 10; i++) {
            System.out.print("Ingrese el numero " + (i+1) + " del arreglo ");
            numeros[i] = teclado.nextInt();
        }
        
        System.out.println("\nLos números ingresados en orden inverso es");
        for (int i = 9; i >= 0; i--) {
            System.out.println("Posición " + i + ": " + numeros[i]);
        }
  
    }
}
